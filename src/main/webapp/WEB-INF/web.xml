<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>com.touhousoft.projectjd.listeners.ApplicationListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.touhousoft.projectjd.listeners.SessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.touhousoft.projectjd.listeners.RequestListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.touhousoft.projectjd.servlets.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/saludo</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ContextDemoServlet</servlet-name>
        <servlet-class>com.touhousoft.projectjd.servlets.ContextDemoServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>PersonasServlet</servlet-name>
      <servlet-class>com.touhousoft.projectjd.servlets.PersonasServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>PersonasServlet</servlet-name>
      <url-pattern>/conexion</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ContextDemoServlet</servlet-name>
        <url-pattern>/context</url-pattern>
    </servlet-mapping>

      <!-- Parametros de contexto -->
    <context-param>
          <param-name>adminEmail</param-name>
          <param-value>admin@localhost.com</param-value>
        </context-param>

     <context-param>
          <param-name>jdbUrl</param-name>
          <param-value>jdbc:mariadb://127.0.0.1:3306/project5</param-value>
    </context-param>

    <context-param>
          <param-name>jdbcUsername</param-name>
          <param-value>root</param-value>
        </context-param>

      <context-param>
          <param-name>jdbcPassword</param-name>
          <param-value>reimu98</param-value>
        </context-param>
</web-app>
